@model FlyAir.Models.IdentityEntities.CustomUser
@{
    ViewData["Title"] = "AccountDetails";
}

<style>
    label{
        font-weight: bold;
    }
    #menuDiv a {
        width: 250px;
        height: 70px;
        margin-bottom: 10px;
    }
    #menuDiv .row div{
        /*margin: 5px 5px 5px 5px;*/
    }
</style>

<div class="container">
    <h2>Your Account Details</h2>
    <div class="card" style="margin-bottom: 50px;">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <label asp-for="Email"></label>
                </div>
                <div class="col-md-8">
                    <div>@Model.Email</div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label asp-for="UserName"></label>
                </div>
                <div class="col-md-8">
                    <div>@Model.UserName</div>
                </div>
            </div>
            @*<div class="row">
                <div class="col-md-4">
                    <label asp-for="Address"></label>
                </div>
                <div class="col-md-8">
                    <div>@Model.Address</div>
                </div>
            </div>*@
            <br />
            <br />
            <br />

            <div id="menuDiv">
                <div class="row">
                    <div class="col-md-4">
                        <a asp-controller="Booking" asp-action="GetMemberBookings" class="btn btn-primary">Your Bookings</a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="Manage" asp-action="ChangePassword" class="btn btn-primary">Change Password</a>
                    </div>
                </div>
                
            </div>
            
        </div>
    </div>
</div>