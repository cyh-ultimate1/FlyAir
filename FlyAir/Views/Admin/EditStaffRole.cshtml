@model FlyAir.Models.IdentityEntities.UserAndRole
@{
    ViewData["Title"] = "EditStaffRole";
}

<h2>EditStaffRole</h2>

<div class="container-fluid">
    <div>
        <form asp-controller="Admin" asp-action="EditStaffRole" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="UserId" value="@Model.UserId" />
            <div class="form-group">
                <label  class="control-label">Role</label>
                <select class="form-control" asp-for="RoleId" asp-items="@Model.RolesList">
                    
                </select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-info" value="UPDATE"/>
            </div>
        </form>
    </div>
</div>
