@model IEnumerable<FlyAir.Models.FlightModels.Plane>

@{
    ViewData["Title"] = "ViewAllPlanes";
}

<div class="container-fluid">
    <h2>View All Planes</h2>
    <div class="col-md-12 one">
        <a asp-controller="Admin" asp-action="AddPlane" class="btn btn-info">Add New Plane</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FlightSeatTypeID)
                </th>
                <th>
                    Left Seats
                </th>
                <th>
                    Center Seats
                </th>
                <th>
                    Right Seats
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FlightSeatTypeID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FlightSeatType.NumSeatsLeft)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FlightSeatType.NumSeatsCenter)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FlightSeatType.NumSeatsRight)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
