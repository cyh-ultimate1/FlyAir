@model FlyAir.Models.StaffModels.Pilot

@{
    ViewData["Title"] = "AddPilot";
}


<div class="container-fluid">
    <h4>Add Pilot</h4>
    <hr />
    <div class="col-md-4">
        <form asp-action="AddPilot" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="StaffID" type="hidden" value="@Model.StaffID" />
            <div class="form-group">
                <label asp-for="PilotLicenceNum" class="control-label"></label>
                <input asp-for="PilotLicenceNum" class="form-control" />
                <span asp-validation-for="PilotLicenceNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}