
@{
    ViewData["Title"] = "Dashboard";
}

<link rel="stylesheet" href="~/css/dashboard.css">

<style>
    .one {
        margin-bottom: 10px;
    }

        .one a {
            width: 500px;
            height: 50px;
        }
</style>

<div class="container">
    <h2>Admin Dashboard</h2>

    <div class="col-md-12 one">
