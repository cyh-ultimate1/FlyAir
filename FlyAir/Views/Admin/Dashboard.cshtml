        <a asp-controller="Admin" asp-action="ViewAllStaffs" class="btn btn-warning">View All Staffs</a>
    </div>
    <div class="col-md-12 one">
        <a asp-controller="Admin" asp-action="ViewAllPlanes" class="btn btn-info">View All Planes</a>
