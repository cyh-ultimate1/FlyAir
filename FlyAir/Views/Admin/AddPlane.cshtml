@model FlyAir.Models.FlightModels.AddPlaneVM
@{
    ViewData["Title"] = "AddPlane";
}

<div class="container-fluid">
    <h2>Add New Plane</h2>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddPlane" asp-controller="Admin" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Plane.Name" class="control-label"></label>
                    <input asp-for="Plane.Name" class="form-control" />
                    <span asp-validation-for="Plane.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Plane.FlightSeatTypeID" class="control-label"></label>
                    <select class="form-control" asp-for="Plane.FlightSeatTypeID" asp-items="@Model.FlightSeatTypes">
                        <option selected>-- Please select one --</option>
                    </select>
                    <span asp-validation-for="Plane.FlightSeatTypeID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
</div>
